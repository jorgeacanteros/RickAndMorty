<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  app:cardElevation="10dp"
  app:cardCornerRadius="8dp"
  android:layout_margin="8dp"
  android:layout_height="wrap_content">


  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:background="@color/grey"
    android:layout_height="match_parent">

    <com.google.android.material.imageview.ShapeableImageView
      android:id="@+id/imageCharacterID"
      android:layout_width="75dp"
      android:scaleType="centerCrop"
      android:layout_height="75dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:srcCompat="@tools:sample/avatars" />

    <TextView
      android:id="@+id/NameIDCharacter"
      android:layout_width="150dp"
      android:scrollbars = "horizontal"
      android:layout_height="wrap_content"
      android:layout_marginStart="10dp"
      android:textColor="@color/black"
      android:layout_marginTop="10dp"
      android:text="TextView"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toEndOf="@+id/imageCharacterID"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="Title Name" />

    <TextView
      android:id="@+id/StatusID"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/black"
      android:layout_marginStart="10dp"
      android:layout_marginTop="10dp"
      android:text="TextView"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toEndOf="@+id/imageCharacterID"
      app:layout_constraintTop_toBottomOf="@+id/NameIDCharacter"
      tools:text="Status Name" />

    <TextView
      android:id="@+id/textViewEspecie"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="20dp"
      android:textColor="@color/black"
      android:text="Especie"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />


  </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>