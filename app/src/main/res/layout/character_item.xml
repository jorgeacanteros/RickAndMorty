<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">


  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:background="@color/purple_200"
    android:outlineAmbientShadowColor="@color/black"
    android:layout_height="match_parent">

    <ImageView
      android:id="@+id/imageCharacterID"
      android:layout_width="75dp"
      android:layout_height="75dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:srcCompat="@tools:sample/avatars" />

    <TextView
      android:id="@+id/NameIDCharacter"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="10dp"
      android:textColor="@color/black"
      android:layout_marginTop="10dp"
      android:text="TextView"
      app:layout_constraintStart_toEndOf="@+id/imageCharacterID"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="Title Name" />

    <TextView
      android:id="@+id/StatusID"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/black"
      android:layout_marginStart="10dp"
      android:layout_marginTop="10dp"
      android:text="TextView"
      app:layout_constraintStart_toEndOf="@+id/imageCharacterID"
      app:layout_constraintTop_toBottomOf="@+id/NameIDCharacter"
      tools:text="Status Name" />


  </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>